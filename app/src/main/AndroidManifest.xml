<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ca.qc.cgmatane.informatique.foodshot">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ActivitePrincipale"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ActiviteNouvellePublication"
            android:label="@string/titre_activite_nouvelle_publication"/>
        <activity
            android:name=".ActiviteMonProfil"
            android:label="@string/titre_activite_profil"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ActiviteRechercherProfil"
            android:label="@string/titre_activite_rechercher_profil"/>
        <activity android:name=".ActivitePublicationsAimees"
            android:label="@string/titre_activite_publications_aimees" />
        <activity android:name=".ActivitePersonnesSuivies"
            android:label="@string/titre_activite_personnes_suivies" />
    </application>

</manifest>