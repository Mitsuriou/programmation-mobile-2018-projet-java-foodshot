<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="editTextColor">@color/editTextColor</item>
    </style>

    <style name="AppThemeRougeBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#8f0000</item>
        <item name="colorAccent">#b7a7a7</item>
    </style>

    <style name="AppThemeRougeNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">#8f0000</item>
        <item name="colorAccent">#b7a7a7</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppThemeBleuBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#004cff</item>
        <item name="colorPrimaryDark">#000c96</item>
        <item name="colorAccent">#b7a7a7</item>
    </style>
    <style name="AppThemeBleuNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#004cff</item>
        <item name="colorPrimaryDark">#000c96</item>
        <item name="colorAccent">#b7a7a7</item>
        <item name="windowActionBar">true</item>
    </style>

    <style name="AppThemeVertBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#2bff00</item>
        <item name="colorPrimaryDark">#009f23</item>
        <item name="colorAccent">#b7a7a7</item>
    </style>

    <style name="AppThemeVertNoBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#2bff00</item>
        <item name="colorPrimaryDark">#009f23</item>
        <item name="colorAccent">#b7a7a7</item>
        <item name="windowActionBar">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>