<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/baseTextColor</item>
        <item name="android:titleTextColor">@color/editTextColor</item>
        <item name="android:subtitleTextColor">@color/editTextColor</item>

        <item name="android:buttonStyle">@style/ButtonColor</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColor" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/editTextColor</item>
    </style>

    <style name="AppThemeNoir" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryDark">#002171</item>
        <item name="colorAccent">#0d47a1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:titleTextColor">#fff</item>
        <item name="android:subtitleTextColor">#fff</item>
        <item name="android:background">#333</item>

        <item name="android:buttonStyle">@style/ButtonColorThemeNoir</item>
        <item name="colorButtonNormal">#5472d3</item>
    </style>

    <style name="ButtonColorThemeNoir" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">#000</item>
    </style>

    <!-- Themes NoActionBar : -->

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/baseTextColor</item>
        <item name="android:titleTextColor">@color/editTextColor</item>
        <item name="android:subtitleTextColor">@color/editTextColor</item>

        <item name="android:buttonStyle">@style/ButtonColorThemeNoirNoActionBar</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColorThemeNoirNoActionBar" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">@color/editTextColor</item>
    </style>

    <style name="AppThemeNoirNoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryDark">#002171</item>
        <item name="colorAccent">#0d47a1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:titleTextColor">#fff</item>
        <item name="android:subtitleTextColor">#fff</item>
        <item name="android:background">#333</item>

        <item name="android:buttonStyle">@style/ButtonColorNoActionBar</item>
        <item name="colorButtonNormal">#5472d3</item>
    </style>

    <style name="ButtonColorNoActionBar" parent="@style/Widget.AppCompat.Button">
        <item name="android:textColor">#000</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
